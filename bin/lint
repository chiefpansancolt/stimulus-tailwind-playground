#!/usr/bin/env bash

echo "== Starting Linting =="

echo ""
echo "== Linting Ruby =="
pnpm lint:ruby

echo ""
echo "== Linting Markdown =="
pnpm lint:markdown

echo ""
echo "== Formatting with Prettier =="
if ! pnpm format; then
  echo ""
  echo "== Files found needing formatting =="
  echo "== Initialting Fixes =="
  pnpm format:fix
fi

echo ""
echo "== Linting Complete =="